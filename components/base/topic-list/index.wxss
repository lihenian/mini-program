.topic-list {
  width: 100%;
  height: auto;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0 20rpx 70rpx;
}
.topic-list .content {
  width: 100%;
  height: 100%;
}
.topic-list .subtitle {
  height: 110rpx;
  line-height: 110rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(51,51,51,1);
  margin-bottom: 20rpx;
}
.topic-list .list-item {
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #eeeeee;
}
.topic-list .list-item .img {
  width: 74rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topic-list .list-item .img image {
  width: 56rpx;
  height: 56rpx;
}
.topic-list .list-item .index {
  width: 74rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align:center;
  font-size:36rpx;
  font-weight:500;
  color: #666;
}
.topic-list .list-item  .title {
  height: 90rpx;
  line-height: 90rpx;
  font-size:34rpx;
  font-weight:500;
  color: #666;
  width: calc(100% - 74rpx - 93rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.topic-list .list-item .num {
  height: 90rpx;
  line-height: 90rpx;
  width: 93rpx;
  text-align: right;
  font-size:28rpx;
  font-weight:500;
  color:rgba(46,115,255,1);
}
.topic-list .list-item .first {
  font-size:30rpx;
  color:rgba(244,13,13,1);
}
.topic-list .list-item .second {
  font-size:30rpx;
  color:rgba(255,118,27,1);
}
.topic-list .list-item .thrid {
  font-size:30rpx;
  color:rgba(255,192,0,1);
}