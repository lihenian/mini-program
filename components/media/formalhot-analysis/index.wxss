.formalhot-analysis {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0 15rpx;
  margin-bottom: 40rpx;
}
.formalhot-analysis .content {
  width: 100%;
  height: 100%;
}
.formalhot-analysis .title {
  height:100rpx;
  line-height: 100rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(51,51,51,1);
}

.formalhot-analysis .item {
  width: 100%;
  height: 110rpx;
}

.formalhot-analysis .item .name {
  height: 59rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.formalhot-analysis .item .name .street {
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}

.formalhot-analysis .item .name .num {
  font-size:28rpx;
  font-weight:500;
  color:rgba(91,133,251,1);
}